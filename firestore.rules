rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permite el acceso de lectura y escritura a cualquier documento en cualquier colecci贸n
    // a cualquier usuario que haya iniciado sesi贸n en la aplicaci贸n.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
