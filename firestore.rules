rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    //============================================================
    // FUNCIONES AUXILIARES DE SEGURIDAD
    //============================================================

    // Función que obtiene el perfil del usuario autenticado.
    function getUserProfile() {
      return get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data;
    }

    // Función que verifica si el usuario es miembro de un recurso (maneja la estructura nueva y la antigua).
    function isMember(resourceData) {
      // La sintaxis correcta sin 'if'. Devuelve el resultado de la expresión booleana.
      return (resourceData.members is list && request.auth.uid in resourceData.members) ||
             (resourceData.members is map && request.auth.uid in resourceData.members.keys());
    }

    // Función que verifica la membresía a un proyecto para un bug (movida al nivel superior).
    function isProjectMemberForBug(projectId) {
      let projectDoc = get(/databases/$(database)/documents/projects/$(projectId));
      return projectDoc.exists && isMember(projectDoc.data);
    }

    //============================================================
    // REGLAS DE PERFILES DE USUARIO
    //============================================================
    match /profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    //============================================================
    // REGLAS DE PROYECTOS
    //============================================================
    match /projects/{projectId} {
      // LECTURA/ACTUALIZACIÓN: Permite si eres miembro del proyecto.
      allow read, update: if request.auth != null && isMember(resource.data);

      // CREACIÓN: Regla robusta para garantizar la integridad de los datos.
      allow create: if request.auth != null &&
                       request.resource.data.members is list &&
                       request.auth.uid in request.resource.data.members &&
                       request.resource.data.teamId == getUserProfile().teamId;

      // BORRADO: Solo el propietario puede borrar.
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    //============================================================
    // REGLAS DE BUGS 
    //============================================================
    match /bugs/{bugId} {
      // La lógica de la función se invoca aquí, pero la función se declara arriba.
      allow read, update, delete: if request.auth != null && isProjectMemberForBug(resource.data.proyecto_id);
      allow create: if request.auth != null && isProjectMemberForBug(request.resource.data.proyecto_id);
    }
    
    //============================================================
    // REGLAS DE EQUIPOS (TEAMS)
    //============================================================
    match /teams/{teamId} {
      allow read, update: if request.auth != null && isMember(resource.data);
      allow create: if request.auth != null && request.resource.data.members is list && request.auth.uid in request.resource.data.members;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}
