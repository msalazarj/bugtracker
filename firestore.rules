rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    //============================================================
    // REGLAS DE PERFILES DE USUARIO (Simplificado)
    //============================================================
    match /profiles/{userId} {
      allow read: if request.auth != null;
      // Se simplifica la regla: request.auth != null es redundante.
      allow write: if request.auth.uid == userId;
    }

    //============================================================
    // REGLAS DE PROYECTOS
    //============================================================
    match /projects/{projectId} {
      allow read, update: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }

    //============================================================
    // REGLAS DE BUGS (CORREGIDO Y ROBUSTO)
    //============================================================
    match /bugs/{bugId} {
      // Funci√≥n refactorizada para consistencia y seguridad.
      function isProjectMember(projectId) {
        let projectData = get(/databases/$(database)/documents/projects/$(projectId)).data;
        // Se verifica que 'members' exista y se usa 'in' de forma consistente.
        return 'members' in projectData && request.auth.uid in projectData.members;
      }
      
      allow read, update, delete: if request.auth != null && isProjectMember(resource.data.proyecto_id);
      allow create: if request.auth != null && isProjectMember(request.resource.data.proyecto_id);
    }
    
    //============================================================
    // REGLAS DE EQUIPOS (TEAMS)
    //============================================================
    match /teams/{teamId} {
      allow read, update: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      allow delete: if request.auth != null && request.auth.uid == resource.data.ownerId;
    }
  }
}